<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>
<main class="app-main">
    <!--begin::App Content Header-->
    <div class="app-content-header">
      <!--begin::Container-->
      <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
          <div class="col-sm-6"><h3 class="mb-0">Bank</h3></div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-end">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/bank">Bank</a></li>
              <li class="breadcrumb-item active" aria-current="page">Edit</li>
            </ol>
          </div>
        </div>
        <!--end::Row-->
      </div>
      <!--end::Container-->
    </div>
    <!--end::App Content Header-->
    <!--begin::App Content-->
    <div class="app-content">
      <!--begin::Container-->
      <div class="container-fluid"> 
        <div class="card card-primary card-outline mb-4">
          <div class="card-header">
            <div class="card-title">
              Edit Bank Form
            </div>
          </div>
          <!--begin::Body-->
          <form action="/bank/edit/<%= bank._id %>?_method=PUT" method="POST">
            <div class="card-body">
              <div class="mb-3">
                <label for="name" class="form-label">Name Account</label>
                <input type="text" value="<%= bank.name %>" class="form-control" id="name" name="name" aria-describedby="name" placeholder="Type name account...." required>
              </div>
              <div class="mb-3">
                <label for="bankName" class="form-label">Bank Name</label>
                <input type="text" value="<%= bank.bankName %>" class="form-control" id="bankName" name="bankName" aria-describedby="bankName" placeholder="Type name bank...." required>
              </div>
              <div class="mb-3">
                <label for="noRekening" class="form-label">Account Number</label>
                <input type="number" value="<%= bank.noRekening %>" class="form-control" id="noRekening" name="noRekening" aria-describedby="noRekening" placeholder="Type number account...." required>
              </div>
            </div>
            <!--end::Body-->
            <!--begin::Footer-->
            <div class="card-footer" style="display: flex; justify-content: end;">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            <!--end::Footer-->
        </form>
        </div>
      </div>
    </div>
</main>

<%- include ../../partials/footer.ejs %>
<%- include ../../partials/js.ejs %>

<table id="example" class="table table-striped" style="width:100%">
    <thead>
        <tr>
            <th style="text-align: left;">No.</th>
            <th>Name</th>
            <th>Bank Name</th>
            <th style="text-align: left;">Bank Number Account</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% for (let i = 0; i < bank.length; i++) { %>
            <tr>
                <td style="text-align: left;"><%= i + 1 %></td>
                <td><%= bank[i].name %></td>
                <td><%= bank[i].nameBank %></td>
                <td style="text-align: left;"><%= bank[i].noRekening %></td>
                <td>
                    <form action="/bank/delete/<%= bank[i]._id %>?_method=DELETE" method="POST">
                        <a href="/bank/edit/<%= bank[i]._id %>" class="btn btn-sm btn-warning text-white">
                            <i class="bi bi-pencil m-1"></i>Edit</a>
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash m-1"></i>Delete</button>
                    </form>
                </td>
            </tr>
        <% } %>
    </tbody>
</table>